<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lynx.DesktopClient.Views.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New repository"
                            Command="{Binding InitCommand}" />
            <MenuFlyoutItem Text="Add local repository"
                            Command="{Binding AddLocalRepository}" />
            <MenuFlyoutItem Text="Clone repository"
                            Command="{Binding CloneRepository}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
